{
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "preferredModel": "sonnet",
  "maxParallelAgents": 5,
  "qualityGates": {
    "codeReviewMinScore": 80,
    "testCoverageMin": 80,
    "securityScanRequired": true
  },
  "hooks": {
    "_comment": "7-Layer Defense System: Contract + State Injection + Permission + Read-before-Write + Baseline Lock + Skill Evidence + Deviation Approval",

    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-sessionstart-injector.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-continue-guard.js",
            "timeout": 10
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/skill-usage-guard.js",
            "timeout": 5
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/workflow-guard-bash.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-fidelity-guard.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/deviation-approval-guard.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/workflow-guard-write.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/file-creation-guard.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-fidelity-guard.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/deviation-approval-guard.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/workflow-guard-write.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-fidelity-guard.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/deviation-approval-guard.js",
            "timeout": 10
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-fidelity-guard.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read|Bash|Grep|Glob|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/auto-memory-saver.js",
            "timeout": 30
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/auto-memory-saver.js session-end",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node .claude/hooks/session-handoff-generator.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
